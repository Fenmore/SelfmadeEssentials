<?xml version="1.0" encoding="UTF-8"?>
<project name="module_selfmadeessentials" default="compile.module.selfmadeessentials">
  <dirname property="module.selfmadeessentials.basedir" file="${ant.file.module_selfmadeessentials}"/>
  
  <property name="module.jdk.home.selfmadeessentials" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.selfmadeessentials" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.selfmadeessentials" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.selfmadeessentials" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="selfmadeessentials.output.dir" value="${module.selfmadeessentials.basedir}/out/production/SelfmadeEssentials"/>
  <property name="selfmadeessentials.testoutput.dir" value="${module.selfmadeessentials.basedir}/out/test/SelfmadeEssentials"/>
  
  <path id="selfmadeessentials.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="selfmadeessentials.module.production.classpath">
    <path refid="${module.jdk.classpath.selfmadeessentials}"/>
    <path refid="library.spigot-api-1.11-r0.1-snapshot-shaded.classpath"/>
  </path>
  
  <path id="selfmadeessentials.runtime.production.module.classpath">
    <pathelement location="${selfmadeessentials.output.dir}"/>
    <path refid="library.spigot-api-1.11-r0.1-snapshot-shaded.classpath"/>
  </path>
  
  <path id="selfmadeessentials.module.classpath">
    <path refid="${module.jdk.classpath.selfmadeessentials}"/>
    <pathelement location="${selfmadeessentials.output.dir}"/>
    <path refid="library.spigot-api-1.11-r0.1-snapshot-shaded.classpath"/>
  </path>
  
  <path id="selfmadeessentials.runtime.module.classpath">
    <pathelement location="${selfmadeessentials.testoutput.dir}"/>
    <pathelement location="${selfmadeessentials.output.dir}"/>
    <path refid="library.spigot-api-1.11-r0.1-snapshot-shaded.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.selfmadeessentials">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.selfmadeessentials">
    <patternset refid="excluded.from.module.selfmadeessentials"/>
  </patternset>
  
  <path id="selfmadeessentials.module.sourcepath">
    <dirset dir="${module.selfmadeessentials.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.selfmadeessentials" depends="compile.module.selfmadeessentials.production,compile.module.selfmadeessentials.tests" description="Compile module SelfmadeEssentials"/>
  
  <target name="compile.module.selfmadeessentials.production" depends="register.custom.compilers" description="Compile module SelfmadeEssentials; production classes">
    <mkdir dir="${selfmadeessentials.output.dir}"/>
    <javac2 destdir="${selfmadeessentials.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.selfmadeessentials}/javac">
      <compilerarg line="${compiler.args.selfmadeessentials}"/>
      <bootclasspath refid="selfmadeessentials.module.bootclasspath"/>
      <classpath refid="selfmadeessentials.module.production.classpath"/>
      <src refid="selfmadeessentials.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.selfmadeessentials"/>
    </javac2>
    
    <copy todir="${selfmadeessentials.output.dir}">
      <fileset dir="${module.selfmadeessentials.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.selfmadeessentials.tests" depends="register.custom.compilers,compile.module.selfmadeessentials.production" description="compile module SelfmadeEssentials; test classes" unless="skip.tests"/>
  
  <target name="clean.module.selfmadeessentials" description="cleanup module">
    <delete dir="${selfmadeessentials.output.dir}"/>
    <delete dir="${selfmadeessentials.testoutput.dir}"/>
  </target>
</project>